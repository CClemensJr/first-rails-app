<h1>Articles Tagged With <%= @tag.name %></h1>

<h2><%= link_to "<< Return to the tags list", tags_path %></h2><br>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul><br>

<h4><%= link_to "Delete Tag",
            tag_path(@tag),
            method: :delete,
            data: {confirm: "Really delete the tag?"} %></h4>
